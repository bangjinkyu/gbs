<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:id="@id/tlTop"
        android:paddingLeft="10.0dip"
        android:paddingTop="20.0dip"
        android:paddingBottom="10.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textSize="13.0sp"
                        android:textColor="#ffffffff"
                        android:id="@id/btnSave"
                        android:background="@drawable/smallbuttons"
                        android:layout_width="60.0dip"
                        android:layout_height="33.0dip"
                        android:text="저장" />
                    <Button
                        android:textSize="13.0sp"
                        android:textColor="#ffffffff"
                        android:id="@id/btnDel"
                        android:background="@drawable/smallbuttons"
                        android:layout_width="60.0dip"
                        android:layout_height="33.0dip"
                        android:text="삭제" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="이름(*)" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:textSize="13.0sp"
                    android:id="@id/txtName"
                    android:layout_width="70.0dip"
                    android:layout_height="35.0dip"
                    android:ems="10" />
                <Spinner
                    android:id="@id/spnRole"
                    android:layout_width="wrap_content"
                    android:layout_height="38.0dip"
                    android:layout_marginTop="2.0dip" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="생일" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:gravity="center"
                    android:id="@id/txtBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="date"
                    android:hint="yyyy-mm-dd"/>
                <Button
                    android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/btnBirth"
                    android:background="@drawable/smallbuttons"
                    android:layout_width="50.0dip"
                    android:layout_height="33.0dip"
                    android:text="달력" />
                <ToggleButton
                    android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/swLunar"
                    android:background="@drawable/smalltogglebuttons"
                    android:layout_width="50.0dip"
                    android:layout_height="33.0dip"
                    android:checked="true"
                    android:textOn="양력"
                    android:textOff="음력" />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="" />
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <ToggleButton
                    android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/swSex"
                    android:background="@drawable/smalltogglebuttons"
                    android:layout_width="50.0dip"
                    android:layout_height="33.0dip"
                    android:textOn="자매"
                    android:textOff="형제" />
                <ToggleButton android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/swMarried"
                    android:background="@drawable/smalltogglebuttons"
                    android:layout_width="50.0dip"
                    android:layout_height="33.0dip"
                    android:textOn="기혼"
                    android:textOff="미혼" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="휴대폰" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:textSize="15.0sp"
                    android:id="@id/txtPhone1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:maxLength="3"
                    android:inputType="phone" />
                <TextView
                    android:textSize="15.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
                <EditText
                    android:textSize="15.0sp"
                    android:id="@id/txtPhone2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:maxLength="4"
                    android:inputType="phone" />
                <TextView
                    android:textSize="15.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
                <EditText
                    android:textSize="15.0sp"
                    android:id="@id/txtPhone3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:maxLength="4"
                    android:inputType="phone" />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="이메일" />
            <EditText
                android:textSize="13.0sp"
                android:id="@id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="35.0dip"
                android:ems="10" />
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="주소" />
            <EditText
                android:textSize="13.0sp"
                android:id="@id/txtAddr"
                android:layout_width="wrap_content"
                android:lines="3"
                android:ems="10" />
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="인도자" />
            <EditText
                android:textSize="13.0sp"
                android:id="@id/txtHelper"
                android:layout_width="wrap_content"
                android:layout_height="35.0dip" android:ems="10" />
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="비고" />
            <EditText
                android:textSize="13.0sp"
                android:gravity="top"
                android:id="@id/txtRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ems="10"
                android:singleLine="false" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center_vertical"
                android:paddingRight="30.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="인도일" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:gravity="center"
                    android:id="@id/txtJoinDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="date"
                    android:hint="yyyy-mm-dd"/>
                <Button
                    android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/btnJoinDt"
                    android:background="@drawable/smallbuttons"
                    android:layout_width="60.0dip"
                    android:layout_height="33.0dip"
                    android:text="달력" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="출석부" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ToggleButton
                    android:textSize="13.0sp"
                    android:textColor="#ffffffff"
                    android:id="@id/swIsActive"
                    android:background="@drawable/smalltogglebuttons"
                    android:layout_width="80.0dip"
                    android:layout_height="33.0dip"

                    android:textOn="활성"
                    android:textOff="비활성" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20.0dip">
            <TextView
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textSize="13.0sp"
                        android:id="@id/btnCall"
                        android:background="@drawable/smallbuttons"
                        android:layout_width="55.0dip"
                        android:layout_height="33.0dip"
                        android:text="Call" />
                    <Button
                        android:textSize="13.0sp"
                        android:id="@id/btnSMS"
                        android:background="@drawable/smallbuttons"
                        android:layout_width="55.0dip"
                        android:layout_height="33.0dip"
                        android:text="SMS" />
                    <Button
                        android:textSize="13.0sp"
                        android:id="@id/btnEmail"
                        android:background="@drawable/smallbuttons"
                        android:layout_width="55.0dip"
                        android:layout_height="33.0dip"
                        android:text="Email" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>