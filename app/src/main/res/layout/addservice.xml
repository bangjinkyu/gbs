<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/darker_gray">
    <TabHost
        android:id="@id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/tab1"
                    android:paddingTop="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/birthHandler"
                        android:paddingTop="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip">
                        <ToggleButton
                            android:textSize="13.0sp"
                            android:textColor="#ffffffff"
                            android:id="@id/swIsAlert"
                            android:background="@drawable/smalltogglebuttons"
                            android:layout_width="80.0dip"
                            android:layout_height="33.0dip"
                            android:checked="false"
                            android:textOn="알림(O)"
                            android:textOff="알림(X)" />
                        <Spinner
                            android:id="@id/spnMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="38.0dip"
                            android:layout_marginTop="2.0dip"
                            />
                        <TextView
                            android:id="@id/txtBirthCount"
                            android:paddingLeft="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <ScrollView
                        android:orientation="vertical"
                        android:paddingLeft="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TableLayout
                            android:id="@id/birthList"
                            android:paddingTop="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/tab2"
                    android:paddingTop="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <RadioGroup
                        android:orientation="horizontal"
                        android:id="@id/rbStat"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@id/rbGender"
                            android:layout_width="100.0dip"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="남녀비율"
                            android:textColor="@android:color/black"/>
                        <RadioButton
                            android:id="@id/rbMarriage"
                            android:layout_width="100.0dip"
                            android:layout_height="wrap_content"
                            android:text="혼인비율"
                            android:textColor="@android:color/black"/>
                        <RadioButton
                            android:id="@id/rbAge"
                            android:layout_width="100.0dip"
                            android:layout_height="wrap_content"
                            android:text="연령비율"
                            android:textColor="@android:color/black"/>
                    </RadioGroup>
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/chart1"
                            android:paddingTop="20.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/chart2"
                            android:paddingTop="20.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/chart3"
                            android:paddingTop="20.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/tab3"
                    android:paddingTop="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/statHandler"
                        android:paddingTop="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                            <Spinner
                                android:id="@id/spnGender"
                                android:layout_width="wrap_content"
                                android:layout_height="38.0dip"
                                android:layout_marginTop="2.0dip" />
                            <Spinner
                                android:id="@id/spnMarriage"
                                android:layout_width="wrap_content"
                                android:layout_height="38.0dip"
                                android:layout_marginTop="2.0dip" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                            <Spinner
                                android:id="@id/spnAge"
                                android:layout_width="wrap_content"
                                android:layout_height="38.0dip"
                                android:layout_marginTop="2.0dip" />
                            <Spinner
                                android:id="@id/spnRole"
                                android:layout_width="wrap_content"
                                android:layout_height="38.0dip"
                                android:layout_marginTop="2.0dip" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                            <Button
                                android:textSize="13.0sp"
                                android:id="@id/btnMemberList"
                                android:background="@drawable/smallbuttons"
                                android:layout_width="60.0dip"
                                android:layout_height="33.0dip"
                                android:layout_marginTop="2.0dip"
                                android:text="조회"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@id/txtMemberCount"
                                android:paddingLeft="10.0dip"
                                android:paddingTop="13.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="left"
                        android:layout_width="fill_parent"
                        android:layout_height="20.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="30.0dip">
                        <Button
                            android:background="#ffff8c00"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="20.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="전교사"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:background="@color/mis1"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="20.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="선교사"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:background="#ffffd700"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="20.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="선교목양사"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:background="#fffe2d95"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="20.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="셀장"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:background="#ffffffff"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="20.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="셀원"
                            android:textColor="@android:color/black"/>
                        <Button
                            android:background="#ff7cfc00"
                            android:layout_width="13.0dip"
                            android:layout_height="13.0dip" />
                        <TextView
                            android:textSize="11.0sp"
                            android:gravity="left"
                            android:paddingLeft="10.0px"
                            android:paddingRight="10.0px"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="새가족"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <ScrollView
                        android:orientation="vertical"
                        android:paddingLeft="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TableLayout
                            android:id="@id/memberList"
                            android:paddingTop="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>